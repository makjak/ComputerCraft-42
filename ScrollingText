print("Displaying text...")
print("Hold Ctrl-T to terminate.")
 
local pos = 18
 
mon = peripheral.wrap("back")
mon.clear()
mon.setBackgroundColor(colors.red)
mon.setTextColor(colors.white)
mon.setTextScale(5)
 
while true do
 
 if pos==-26 then
   pos = 18
 end
 
 mon.clear()
 mon.setCursorPos(pos,1)
 mon.write("RedTek's Laboratory")
 pos = pos-1
 
 os.sleep(0.15)
   
end
